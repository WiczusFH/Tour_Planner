<UserControl x:Class="Tour_Planner_3.View.UserControls.Report"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tour_Planner_3.View.UserControls"
             xmlns:viewModel="clr-namespace:ViewModel;assembly=ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel DataContext="{Binding reportViewModel}">
        <Label>Route Name:</Label>
        <ComboBox Width="Auto" ItemsSource="{Binding tourlist.tours}" DisplayMemberPath="route_title"
                  SelectedValuePath="route_title"
                  SelectedValue="{Binding inputRouteName}">
        </ComboBox>
        <Button Command="{Binding generatePDFButton}">Generate PDF</Button>
    </StackPanel>
</UserControl>
